CWD = $(OBJDIR)/lab2
OBJDIRS += lab2

LBA2_CCFILES  += lab2/main.cc\

LAB2_OBJFILES := $(patsubst %.cc, $(OBJDIR)/%.o, $(LBA2_CCFILES))

$(CWD)/%.o: lab2/%.cc
	@echo + cc $<
	@mkdir -p $(@D)
	$(V)$(CC) $(CCFLAGS) -c $< -o $@	

$(CWD)/main: $(LAB2_OBJFILES)
	@echo + ld $<
	$(V)$(CC) -o $@ $^ $(LDFLAGS)

all: $(CWD)/main

lab2: $(CWD)/main
	./$(CWD)/main